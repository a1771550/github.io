@using BLL.Helpers
@using UI.Helpers
@model WcExample
@{
	var culturename = CultureHelper.GetCurrentCulture();
	var exChi = Model.EntryChi;
	var exJap = Model.EntryJap;
	var exTrans = culturename.Contains("zh") ? exChi : exJap;
	var sourceRemark = WcHelper.GetSourceRemark(Model);
	var collocation = BLLHelper.GetCollocationByCollocationId((long) TempData["CollocationId"]);
	var formattedExample = WcHelper.GetFormattedExample(Model.Entry, collocation);
}
