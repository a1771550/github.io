@using BLL.Helpers
@using UI.Helpers
@model Collocation
@{
	var culturename = CultureHelper.GetCurrentCulture();
	var colWord = Model.ColWord;
	var colWordChi = Model.ColWordChi;
	var colWordJap = Model.ColWordJap;
	var colWordTrans = culturename.Contains("zh") ? colWordChi : colWordJap;

	var exampleList = BLLHelper.GetWcExampleListByCollocationId(Model.CollocationId);
	TempData["CollocationId"] = Model.CollocationId;
}
<table id="ColWordList" class="table table-striped table-hover" style="width: 99%">
	<tbody>
		<tr>
			<td>
				@*<table class="table table-striped table-hover" style="color: #333333; border-collapse: collapse; width: 100%;">
					<tbody>
						<tr>
							<td>*@
				<div class="colWordDiv indent-1em">
					<h5>
						<i class="halflings-icon share-alt"></i>&nbsp;<span class="colWordIcon">@colWord</span>&nbsp;
						<span class="colWordTrans">@colWordTrans</span>
					</h5>

					<div class="marginTop1em marginBottom05em">
						<span class="exampleLabel">@Resources.ExampleText</span>
					</div>

					@foreach (var example in exampleList)
					{
						@Html.Partial("ExampleList", example)
					}
				</div>

				@*</td>
							</tr>
						</tbody>
					</table>*@
			</td>
		</tr>

	</tbody>
</table>
