@using Microsoft.AspNet.Identity
@{
	string navClass = "nav navbar-nav navbar-right";
	bool isAdmin = false;
	if (TempData["IsAdmin"] != null) { isAdmin = (bool)TempData["IsAdmin"]; }
	if (isAdmin) { navClass = "nav navbar-nav-admin navbar-right"; }
}
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="@navClass">
            <li>
	            @Html.ActionLink(User.Identity.GetUserName(), "Index", "ManageUsers", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.LogOff</a></li>
        </ul>
    }
}
else {
    <ul class="@navClass">
        @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink(Resources.LogOn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
