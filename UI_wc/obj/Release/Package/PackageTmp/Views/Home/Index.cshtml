@model UI.Models.WcSearchViewModel
@{
	ViewBag.Title = Resources.Home;
	Layout = "~/Views/Shared/_Layout.cshtml";


}

@*<h1>@Resources.Home</h1>*@

@using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "contact-form" }))
{
	<fieldset class="search-form">
		<label for="Word">@Resources.SearchWordText</label>
		<input id="Word" class="text" name="Word" type="text" value="">
	</fieldset>
	<fieldset class="search-form">
		<label for="POS">@Resources.SearchPOSText</label>
		@Html.DropDownList("POS", Model.PosDropDownList, new { @class = "text fLeft" })
	</fieldset>
	<fieldset class="what fLeft">
		<button type="submit">@Resources.Send</button>
	</fieldset>
}